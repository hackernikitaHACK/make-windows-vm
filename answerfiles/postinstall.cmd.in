echo these are commands to be run upon first login post installation
rem echo activate windows with the product key
rem cscript c:\Windows\System32\slmgr.vbs /ipk "@PRODUCT_KEY@"
rem cscript c:\Windows\System32\slmgr.vbs /ato
echo turning off firewall
netsh advfirewall set AllProfiles state off
echo enabling remote desktop
reg add "HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control\Terminal Server" /v fDenyTSConnections /t REG_DWORD /d 0 /f
echo saving network connection details
ipconfig > C:\@IPCONFIG_LOG@

echo disabling IE ESC
rem disable IE ESC
rem for admins
reg add "HKLM\SOFTWARE\Microsoft\Active Setup\Installed Components\{A509B1A7-37EF-4b3f-8CFC-4F3A74704073}" /v IsInstalled /t REG_DWORD /d 00000000 /f
rem for users
reg add "HKLM\SOFTWARE\Microsoft\Active Setup\Installed Components\{A509B1A8-37EF-4b3f-8CFC-4F3A74704073}" /v IsInstalled /t REG_DWORD /d 00000000 /f

echo disabling shutdown event tracker
rem disable shutdown dialog
reg add "HKLM\SOFTWARE\Policies\Control\Microsoft\Windows NT\Reliability" /v ShutDownReasonOn /t REG_DWORD /d 0 /f
reg add "HKLM\SOFTWARE\Policies\Control\Microsoft\Windows NT\Reliability" /v ShutDownReasonUI /t REG_DWORD /d 0 /f

echo adding hostname for the virtual host
echo. >> %windir%\system32\drivers\etc\hosts
echo 192.168.122.1 @VIRTHOST@ >> %windir%\system32\drivers\etc\hosts

echo disabling DNS registration on the network interface 
@powershell -NoProfile -ExecutionPolicy Bypass -Command @ANSF_DRIVE_LETTER@\dnsreg.ps1

@ANSF_DRIVE_LETTER@\nextscript.cmd 0

